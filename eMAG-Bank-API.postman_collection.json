{
  "info": {
    "name": "eMAG Bank API",
    "description": "API collection for eMAG Bank simulation system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/actuator/health",
          "host": ["{{baseUrl}}"],
          "path": ["actuator", "health"]
        }
      }
    },
    {
      "name": "Get All Clients",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/clients",
          "host": ["{{baseUrl}}"],
          "path": ["api", "clients"]
        }
      }
    },
    {
      "name": "Create Client",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"cnp\": \"1234567890123\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"john.doe@example.com\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/clients",
          "host": ["{{baseUrl}}"],
          "path": ["api", "clients"]
        }
      }
    },
    {
      "name": "Get Client by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/clients/{{clientId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "clients", "{{clientId}}"]
        }
      }
    },
    {
      "name": "Get All Products",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/products",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products"]
        }
      }
    },
    {
      "name": "Create Product",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"code\": \"TEST-001\",\n  \"name\": \"Test Product\",\n  \"price\": 100.50\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/products",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products"]
        }
      }
    },
    {
      "name": "Get Product by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/products/{{productId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products", "{{productId}}"]
        }
      }
    },
    {
      "name": "Attach Product to Client",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/clients/{{clientId}}/products/{{productId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "clients", "{{clientId}}", "products", "{{productId}}"]
        }
      }
    },
    {
      "name": "Detach Product from Client",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/clients/{{clientId}}/products/{{productId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "clients", "{{clientId}}", "products", "{{productId}}"]
        }
      }
    },
    {
      "name": "Search Products",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/products/search?q=test&active=true&page=0&size=10",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products", "search"],
          "query": [
            {
              "key": "q",
              "value": "test"
            },
            {
              "key": "active",
              "value": "true"
            },
            {
              "key": "page",
              "value": "0"
            },
            {
              "key": "size",
              "value": "10"
            }
          ]
        }
      }
    },
    {
      "name": "Update Client",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"cnp\": \"1234567890123\",\n  \"firstName\": \"Jane\",\n  \"lastName\": \"Doe\",\n  \"email\": \"jane.doe@example.com\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/clients/{{clientId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "clients", "{{clientId}}"]
        }
      }
    },
    {
      "name": "Update Product",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"code\": \"TEST-001\",\n  \"name\": \"Updated Test Product\",\n  \"price\": 150.75,\n  \"active\": true\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/products/{{productId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products", "{{productId}}"]
        }
      }
    },
    {
      "name": "Delete Client",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/clients/{{clientId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "clients", "{{clientId}}"]
        }
      }
    },
    {
      "name": "Delete Product",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/products/{{productId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products", "{{productId}}"]
        }
      }
    }
  ]
}
